<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/forest_greenA">

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/mercaditotec"
        android:textColor="@color/lime_green"
        android:textSize="20sp"
        tools:ignore="RelativeOverlap" />

    <ImageView
        android:id="@+id/chat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toStartOf="@+id/account"
        android:layout_toLeftOf="@+id/account"
        android:contentDescription="@string/x"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/ic_baseline_chat_24" />

    <ImageView
        android:id="@+id/account"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toStartOf="@+id/exit"
        android:layout_toLeftOf="@+id/exit"
        android:contentDescription="@string/x"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/ic_baseline_account_circle_24" />

    <ImageView
        android:id="@+id/exit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/x"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/ic_baseline_exit_to_app_24" />

</RelativeLayout>
